
<div class="row">
<div class="col-md-1"></div>
<div class="col-md-10">

<h1>All TV Shows</h1>

<table>
   <div class="panel panel-default">
      <table class="table">
  <thead>
    <tr>
      <th>TV Show</th>
      <th>Langauge</th>
      <th>TV Category</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @tv_listings.each do |tv_listing| %>
    <td><%=link_to image_tag(tv_listing.avatar.url(:thumb)), tv_listing%></td>
        <td><%= tv_listing.language.language %></td>
          <td><%= tv_listing.tv_category.category %></td>
        <td><%= link_to 'Find out more >', tv_listing %></td>
       
      </tr>
    <% end %>
  </tbody>
</div>
</table>
</div>

<%= link_to 'Add a new TV show', new_tv_listing_path %>

</div>
<div class="col-md-1"></div>