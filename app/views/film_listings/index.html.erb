<h1>Listing film_listings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Videolink</th>
      <th>Imagelink</th>
      <th>Infolink</th>
      <th>Language</th>
      <th>Film category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @film_listings.each do |film_listing| %>
      <tr>
        <td><%= film_listing.name %></td>
        <td><%= film_listing.videolink %></td>
        <td><%= film_listing.imagelink %></td>
        <td><%= film_listing.infolink %></td>
        <td><%= film_listing.language_id %></td>
        <td><%= film_listing.film_category_id %></td>
        <td><%= link_to 'Show', film_listing %></td>
        <td><%= link_to 'Edit', edit_film_listing_path(film_listing) %></td>
        <td><%= link_to 'Destroy', film_listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

